#configura o Apache para usar o Flight
#aparece erro no VSCODE as vezes, mas não precisa mexer pq funciona

RewriteEngine On

# se a requisição não for para um arquivo ou pasta que existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# envie a requisição para o public/index.php
RewriteRule ^ index.php [QSA,L]